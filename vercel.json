{
  "version": 2,
  "public": true,
  "rewrites": [
    {
      "source": "/api/cron",
      "destination": "api/cron/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "api/index.ts"
    }
  ],
  "redirects": [
    {
      "source": "/api/cron",
      "destination": "/api/cron"
    },
    {
      "source": "/",
      "destination": "/api",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 9 * * 1-5"
    },
    {
      "path": "/api/cron",
      "schedule": "0 13 * * 1-5"
    }
  ]
}