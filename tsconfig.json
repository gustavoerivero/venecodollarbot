{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "module": "CommonJS",
    "declaration": true,
    "outDir": "public",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "es7", "es6", "ESNext", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "public", "**/*/*.test.*"]
}